<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.weathercheck.WeatherActivity"
    tools:targetApi="ICE_CREAM_SANDWICH_MR1">

    <TextView
        android:id="@+id/city_name_view"
        style="@style/weather_header_style"
        android:layout_width="match_parent"
        android:contentDescription="@string/city_name"
        android:text="@string/sunny_day" />

    <LinearLayout
        android:layout_marginTop="@dimen/image_margin_top"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/weather_info_height" >

        <ImageView
            android:id="@+id/weather_image_view"
            style="@style/weather_image_style"
            android:src="@drawable/sun"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/image_description" />

        <TextView
            android:id="@+id/temp_text_view"
            style="@style/temp_view_style"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/temp" />
    </LinearLayout>

</LinearLayout>
